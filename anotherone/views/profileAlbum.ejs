<!doctype html>
<html lang="en">
<head>
    <title>Home</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        .image{
            padding:0px;
            margin:5px;
        }
        .border{
            border-width:10px !important;
        }
        .emptyBorder{
            border-width:10px !important;
            border-color:rgba(0,0,0,0) !important;
        }
    </style>

    <script>
        var nextPageToken = '<%= nextPage%>';
        // console.log(nextPageToken);
    </script>
</head>
<body>

    <div class="container">
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <% if(!user) { %> 
                <li class="nav-item">
                    <a class="nav-link" href="/auth/login">Login</a>
                </li>
                <% } else { %>
                <li class="nav-item active">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </li>
                <% } %> 
            </ul>
        </nav>

        <div class="jumbotron">
            <a name="back" id="back" class="btn btn-primary" href="/profile" role="button">Back</a>
            <h1 class="display-5">Welcome <%=user.profile.displayName %></h1>
            <p class="lead">Thank you for logging in</p>
            <hr class="my-2">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-xs-12 my-2">
                    <h4>Album Labels</h4>
                    <%# <ul id="labelTracker" class="list-group"> %>
                    <div id="labelTracker" class="list-group">
                    </div>
                    <div id="clicked">
                    </div>
                        <%# <li class="list-group-item">Item</li> %>
                    <%# </ul> %>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <div id="imageScroller" class="row pre-scrollable">
                    <% for(image of images) { %>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                            <div class="card my-1">
                                <a href="/profile/photo/<%=albumId%>/<%=image.id%>" class="image">
                                    <img src="<%= image.baseUrl +'=w500-h300'%>" id="<%= image.id %>" class="card-img-top" alt="">
                                </a> 
                                <div class="card-body">
                                    <h6>Labels:</h6>
                                    <ul class="list-group list-group-flush py-6 imageLabels" id="<%= image.id %>">
                                        <%# <li class="list-group-item disabled">Disabled item</li> %>
                                    </ul>
                                </div>
                            </div>
                            <% /* %>
                            <a href="/profile/photo/<%=albumId%>/<%=image.id%>" class="image"> 
                                <img src="<%= image.baseUrl +'=w500-h200'%>" height="100" id="<%= image.id %>" class="img-thumbnail ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|} my-1" alt=""> 
                            </a> 
                            <% */ %>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <!-- My javascript -->
    <script
        src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/javascripts/profileAlbum.js"></script>
</body>
</html>